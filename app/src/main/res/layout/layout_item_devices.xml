<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="@dimen/searchdevice_item_layout_padding"
    android:minHeight="@dimen/searchdevice_item_minheight"
    android:layout_height="wrap_content">
    <ImageView
        android:tint="@color/colorAccent"
        android:src="@mipmap/device_icon"
        android:minHeight="@dimen/searchdevice_item_icon_minheight"
        android:minWidth="@dimen/searchdevice_item_icon_minheight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:padding="@dimen/searchdevice_item_textview_padding"
            android:id="@+id/device_name"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="@dimen/searchdevice_item_textview_padding"
            android:id="@+id/device_mac"
            android:textColor="#C0C0C0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="@dimen/searchdevice_item_textview_padding"
            android:textColor="#C0C0C0"
            android:id="@+id/device_scanre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:padding="@dimen/searchdevice_item_textview_padding"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:id="@+id/device_rssi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
